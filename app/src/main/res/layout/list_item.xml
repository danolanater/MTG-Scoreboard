<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/square"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:background="@drawable/square"

            >
        </View>

        <TextView
            android:id="@+id/big_letter"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_margin="4dp"
            android:background="@drawable/circle"
            android:backgroundTint="#F8FAE2"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="W"
            android:textColor="#000000"
            android:textSize="64dp"
            android:textStyle="bold"></TextView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F8FAE2">

        <TextView
            android:id="@+id/opponent_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opponent Name"
            android:textAlignment="center"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/game_type_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Game Type"
            android:textAlignment="center"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/match_score_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#-#"
            android:textAlignment="center"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/date_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="date"
            android:textAlignment="center"
            android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>
