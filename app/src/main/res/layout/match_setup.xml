<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="Player Name"
            android:textSize="32dp"
            android:fontFamily="cursive"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="Starting Life"
            android:textSize="32dp"
            android:fontFamily="cursive"
            android:textAlignment="viewEnd"/>

    </LinearLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    </ListView>

    <Button
        android:onClick="addPlayer"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_shape_button"
        android:text="Add Player"
        android:textSize="32dp"
        android:fontFamily="cursive"
        android:textColor="#ffffff"
        android:textAllCaps="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="Format"
            android:textSize="32dp"
            android:fontFamily="cursive"
            android:layout_weight="1"
            />

        <Spinner
            android:id="@+id/format_options_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </Spinner>


    </LinearLayout>

    <LinearLayout
        android:layout_above="@id/start_game_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="Best Of "
            android:textSize="32dp"
            android:fontFamily="cursive"
            android:layout_weight="1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/best_of_layout">
            
            <Button
                android:id="@+id/best_of_minus_button"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:background="@android:color/transparent"
                android:textColor="#ffffff"
                />
            <TextView
                android:id="@+id/life_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="32dp" />
            <Button
                android:id="@+id/best_of_plus_button"
                android:layout_alignParentEnd="true"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="+"
                android:background="@android:color/transparent"
                android:textColor="#ffffff"
                />
            
            
            
        </RelativeLayout>


    </LinearLayout>

    <Button
        android:id="@+id/start_game_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:fontFamily="cursive"
        android:textSize="48dp"
        android:textAllCaps="false"
        android:background="@drawable/round_shape_button"
        android:textColor="#ffffff"/>


</LinearLayout>